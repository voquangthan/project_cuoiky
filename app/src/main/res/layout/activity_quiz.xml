<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhmain"
    tools:context=".Quiz_Activity">

    <Button
        android:id="@+id/btn_quiz_back"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_back"
        app:backgroundTint="#D2B48C"
        app:icon="@drawable/icon_back"
        app:iconSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hienthisocau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Số 1 - 1/10"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btn_quiz_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/demsocausaivadung"
        android:layout_width="74dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:text="0 : 0"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndapan1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="412dp"
        android:background="@drawable/button_quez"
        app:backgroundTint="@color/vang"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndapan2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_quez"
        app:backgroundTint="@color/vang"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btndapan4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndapan1" />

    <Button
        android:id="@+id/btndapan4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_quez"
        app:backgroundTint="@color/vang"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndapan3" />

    <Button
        android:id="@+id/btndapan3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        android:background="@drawable/button_quez"
        app:backgroundTint="@color/vang"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/btndapan1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cauhoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="TextView"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ketqua1"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_marginTop="172dp"
        android:background="#FFEBD0"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ketqua2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:visibility="gone"
        android:text="kết quả của bạn là "
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ketqua3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="TextView"
        android:textSize="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>